<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="10"
                   >

                    <Button
                        android:id="@+id/btnPeopleless12"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_Peopleless"
                        android:text="새소식" />

                    <Button
                        android:id="@+id/btnPeopleless22"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_Peopleless"
                        android:text="신간 도서 정보" />

                    <Button
                        android:id="@+id/btnPeopleless33"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_Peopleless"
                        android:text="교육 프로그램 정보" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1.43"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnServiceSearch"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_ServiceSearch"
                        android:text="복 지 정 보 서 비 스 " />
                    <Button
                        android:id="@+id/btnFacilitySearch"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_FacilitySearch"
                        android:text="복 지 시 설 현 황" />
                    <Button
                        android:id="@+id/btnFreeEat"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:onClick="btn_FreeEat"
                        android:text="무 료 급 식 소" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1.43"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnPolice"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:onClick="btn_Police"
                        android:text="지구대 위치"
                        android:textDirection="ltr" />

                    <Button
                        android:id="@+id/btnPeopleless"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:onClick="btn_Peopleless"
                        android:text="무인 민원 발급 정보" />

                    <Button
                        android:id="@+id/btnParking"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:onClick="btn_Parking"
                        android:text="주정차 문자알림" />

                    <Button
                        android:id="@+id/btnStreetLamp"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:onClick="btn_StreetLamp"
                        android:text="가로등 고장 신고" />

                    <Button
                        android:id="@+id/btnHall"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:onClick="btn_Hall"
                        android:text="강당 무료사용신청" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1.43"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1.43"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>